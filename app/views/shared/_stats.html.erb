<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= following_user_path(@user) %>">
          <span id="following" class="stat">
            <%= @user.following.count %> 个关注
          </span>
        </a>
      </td>
      <td>
        <a href="<%= followers_user_path(@user) %>">
          <span id="followers" class="stat">
            <%= @user.followers.count%> 个粉丝
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>

<div class="notification">
	<% if @feed_notifications %>
		<table class="notifications" summary="User notifications">
			<%= render :partial => 'shared/feed_notification', :collection => @feed_notifications %>
		</table>
	<% end %>
</div>
