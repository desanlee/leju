<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
		<h4>
		发起人：<%= @micropost.user.name %> <br>活动日期：<%= @micropost.schedual.strftime('%Y-%m-%d').to_s %>
		</h4>
		<h4>
        <%= @micropost.content %>
		</h4>
		<hr>
		<% unless @comments.empty? %>
			<h4>评论：</h4>
			<table class="comments" summary="User comments">
				<%= render @comments %>
			</table>
		<% end %>
		<span class="comments">
			<%= render 'shared/comment_form' %>
		</span>
		<hr>
		<% unless @micropost.applicants.empty? %>
			<h4>
				<br>参加者：
			</h4>
			<ul class="users">
				<% @micropost.applicants.each do |user| %>
				<li>
					<%= gravatar_for user, :size => 30 %>
					<%= link_to user.name, user %>
				</li>
				<% end %>
			</ul>
		<% end %>
		<%= render 'involve_form' %>
	  
    </td>
    <td class="sidebar round">
		<strong>Name</strong> <%= @user.name %><br />
		<strong>URL</strong>  <%= link_to user_path(@user), @user %>
		<strong>Microposts</strong> <%= @user.microposts.count %>
    </td>
  </tr>
</table>
